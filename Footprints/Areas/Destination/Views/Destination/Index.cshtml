@Layout

@{
    ViewBag.Title = "Index";
}

<!--Tab Section-->
<div class="container-fluid no-padding">
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                <div class="tab-content">
                    <!--Map Content-->
                    <div class="tab-pane active" id="map-tab">
                        <div id="map-canvas"></div>
                    </div>
                    <!--Media Content-->
                    <div class="tab-pane" id="media-tab">
                        <div id="media-container"></div>
                    </div>
                </div>
                <!--tab nav bar-->
                <div class="nav nav-tabs flat-nav-tabs">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#map-tab" data-toggle="tab"><b>Map</b> <span class="glyphicon glyphicon glyphicon-map-marker"></span></a></li>
                        <li><a href="#media-tab" data-toggle="tab"><b>Media</b> <span class="glyphicon glyphicon glyphicon-picture"></span></a></li>
                    </ul>
                </div>
                <!--tab content-->
            </div>
        </div>
    </div>
</div>

<!--Lower section-->
<div class="container-fluid" id="lower-section">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div id="lower-section-content">
                <div class="row">
                    <div class="col-md-11 col-md-offset-1" style="vertical-align:top">
                        <h3><b>Nhan added a new trip to Saigon</b> <small>15 minutes ago at <a>Ben Thanh Market</a></small></h3>
                    </div>
                </div>
                <div class="row" id="lower-section-header">
                    <div id="avatar-container">
                        <div class="col-md-5 col-md-offset-1">
                            <section id="avatar-section">
                                <img src="untitled.png" alt="avatar" class="img-circle" width="120">
                                <div id="right-text">
                                    <h3>Trinh Thanh Nhan</h3>
                                    <span class="label label-primary">15 journeys</span>
                                    <span class="label label-info">400 followers</span>
                                    <h5><small>Joined since ....</small></h5>
                                </div>
                            </section>
                        </div>
                        <div class="col-md-4 col-md-offset-1">
                            <center>
                                <div id="view-info">
                                    <h2><b>2000 <span class="glyphicon glyphicon-thumbs-up"></span></b></h2>
                                    <h5>3000 <span class="glyphicon glyphicon glyphicon-eye-open" style="color:blue"></span></h5>
                                    <h4>
                                        <span class="label label-danger">Share <span class="glyphicon glyphicon-share"></span></span>
                                        <span class="label label-info">Follow <span class="glyphicon glyphicon-plus-sign"></span></span>
                                        <span class="label label-success">Tags <span class="glyphicon glyphicon-tags"></span></span>
                                        <span class="label label-primary">Like <span class="glyphicon glyphicon-thumbs-up"></span></span>
                                    </h4>
                                </div>
                            </center>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div id="seperate-line"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div id="comment-section">
                            <h1>Comment Section</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

