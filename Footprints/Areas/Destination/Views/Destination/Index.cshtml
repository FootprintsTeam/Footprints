@model Footprints.ViewModels.DestinationViewModel

@{
    ViewBag.Title = "Journey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="row ">
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <div class="tab-content">
                <div class="tab-pane active" id="map">
                    <img class="img-responsive" src="/images/map_test.jpg" />
                </div>
                <div class="tab-pane" id="media">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="bg-style ">
                                <div class="bg-green-light padding-bg clearfix">
                                    <p class="pull-left">Đi Đồ Sơn <span>-23 Ảnh</span></p>
                                    <p class="pull-right">
                                        <a href="#">
                                            Add more picture
                                            <i class="fa fa-plus-circle"></i>
                                        </a>
                                    </p>
                                </div>
                                <div class="padding-bg">
                                    <ul class="row">
                                        <li class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                            <a class="" href="#"><img src="/images/img2.jpg" class="img-responsive" /> </a>
                                        </li>
                                        <li class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                            <img src="/images/img2.jpg" class="img-responsive" />
                                        </li>
                                        <li class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                            <img src="/images/img2.jpg" class="img-responsive" />
                                        </li>
                                        <li class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                            <img src="/images/img2.jpg" class="img-responsive" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <ul class="nav nav-tabs" role="tablist">
                <li class="active"><a href="#map" role="tab" data-toggle="tab">Map <i class="fa fa-map-marker"></i></a></li>
                <li><a href="#media" role="tab" data-toggle="tab">Media <i class="fa fa-file-picture-o"></i></a></li>
            </ul>

        </div>

    </div>
    <div class="container">
        <div class="row bg-white padding-bg">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <p><span class="new-trip">@Model.Author.Name add a new trip to Saigon </span> <span class="time">@Model.TimeAgo ago at <span class="atAddress">Ben Thanh market</span></p>
            </div>
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-xs-12 col-sm-6">
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
                            <a href="#"><img src="/images/images.jpg" alt="" class="img-circle img-responsive"></a> <!--You can resize img-->
                        </div>
                        <div class="col-lg-9 col-md-9 col-xs-8 col-sm-9">
                            <div class="clearfix">
                                <a class="name-member pull-left" href="#">@Model.Author.Name</a>
                                <div class="dropdown pull-right">
                                    <a href="#" data-toggle="dropdown">
                                        <i class="fa fa-pencil fa-1x"></i>
                                    </a>
                                    <ul aria-labelledby="dLabel" role="menu" class="dropdown-menu">
                                        <li>
                                            <a href="#">Edit</a>
                                        </li>
                                        <li>
                                            <a href="#">Tag Friends</a>
                                        </li>
                                        <li>
                                            <a href="#">Delete</a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                            <p class="show-des">@Html.Raw(@Model.Description)</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
                        <div class="clearfix">
                            <p class="pull-left  btn-like-view">@Model.NumberOfLikes like</p>
                            <p class="pull-left  btn-like-view">@Model.NumberOfViews view</p>
                        </div>
                        <div class="mrt-20 list-btn">
                            <button class="btn  btn-success  cancel" type="reset">
                                <i class="fa fa-thumbs-up"></i>
                                <span>Like</span>
                            </button>
                            <button class="btn btn-primary cancel" type="reset">
                                <i class="fa fa-share-alt"></i>
                                <span>Share</span>
                            </button>
                            <button class="btn  btn-info cancel" type="reset">
                                <i class="fa fa-tags"></i>
                                <span>Tag</span>
                            </button>
                            <button class="btn  bg-green-light cancel" type="reset">
                                <i class="fa fa-plus-square"></i>
                                <span>Follow </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row mrt-20">
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                        <div class="show-des"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
