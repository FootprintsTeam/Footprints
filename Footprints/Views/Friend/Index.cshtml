@using Microsoft.AspNet.Identity
@model Footprints.ViewModels.FriendViewModel
@{
    ViewBag.Title = "Friend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:60px">
    <div class="innerAll">
        <div class="row">
            <div class="col-lg-1 col-md-1"></div>
            <div class="col-lg-10 col-md-10">
                <div class="input-group innerB">
                    <input id="fac-input" type="text" class="form-control " placeholder="Search contacts">
                    <div class="input-group-btn"><button class="btn btn-default" type="button"><i class="fa fa-search"></i></button></div>
                </div>
                <div class="row row-merge" id="friend-list-container">
                    @if (Model.FriendList != null && Model.FriendList.Count > 0)
                    {
                        foreach (var friend in Model.FriendList)
                        {
                            <div class="media innerAll bg-gray margin-none border-top border-bottom col-md-4 col-lg-4">
                                <a class="pull-left" href="#"><img src="@friend.ProfilePicURL" alt="photo" class="media-object" width="35"></a>
                                <div class="media-body">
                                    <a href="@Url.Action("Index", "Personal", new { userID = @friend.UserID})" class="strong text-inverse">@friend.UserName</a>
                                    <div class="timeline-bottom">
                                        <i class="fa fa-clock-o"></i> @friend.JoinDate.ToString("dd MMMM yyyy")
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
