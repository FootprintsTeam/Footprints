@model Footprints.ViewModels.AddNewJourneyViewModel

<div id="responsive" class="modal fade bs-create-journey" data-toggle="modal" tabindex="-1" data-width="760" style="display: none;">
    <div class="modal-header bg-green-light text-center">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Create new journey</h4>
    </div>
    @using (Html.BeginForm("AddNewJourneyForm", "Journey", new { area = "Journey" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true)

        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-horizontal">
                        @Html.HiddenFor(x => x.NumberOfLike)
                        @Html.HiddenFor(x => x.UserID)
                        @Html.HiddenFor(x => x.Timestamp)
                        <div class="form-group">
                            @Html.DisplayFor(x => x.Name, new { @class = "col-sm-2 control-label" })
                            @*<label for="" class="col-sm-2 control-label">Name</label>*@
                            <div class="col-sm-9">
                                @Html.EditorFor(x => x.Name, new { @class = "form-control" })
                                @*<input type="text" class="form-control" id="" placeholder="">*@
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.DisplayFor(x => x.Description, new { @class = "col-sm-2 control-label" })
                            @*<label for="" class="col-sm-2 control-label">Description</label>*@
                            <div class="col-sm-9">
                                @*<textarea class="txt-desc" rows="3"></textarea>*@
                                @Html.TextAreaFor(x => x.Description)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-2 control-label">Location</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="" placeholder="">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="" class="col-sm-2 control-label">Map Pin</label>
                            <div class="col-sm-9">
                                <img src="images/map.jpg" class="img-responsive">
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label for="" class="col-sm-2 control-label">Time</label>*@
                            @Html.DisplayFor(x => x.TakenDate, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-2 input-calendar">
                                @Html.EditorFor(x => x.TakenDate, new { @class = "form-control" })
                            </div>
                            <i class="fa fa-calendar fa-2x"></i>
                        </div>                        
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create </button>
                <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
            </div>
        </div>
        
    }
</div>
