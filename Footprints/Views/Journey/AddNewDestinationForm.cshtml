@model Footprints.ViewModels.AddNewDestinationFormViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title"><a class="accordion-toggle" data-toggle="collapse" href="#new-destination-form"><i class="fa fa-plus-circle"></i> Add Destination</a></h4>
    </div>
    <div id="new-destination-form" class="panel-collapse collapse">
        <div class="panel-body">
            @*<form name="frmNewDestination" role="form" class="form-horizontal">*@
            @using (Html.BeginForm("Create", "Destination", FormMethod.Post, new { @name = "frmDestination", @class = "form-horizontal", @role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        @Html.ValidationMessageFor(x => x.PlaceID)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Name, new { @placeholder = "Destination name", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name)
                        @*<input type="text" placeholder="Destination name" name="Name" class="form-control">*@
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Description, new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(x => x.Description, new { @placeholder = "Write your description here...", @class = "notebook border-none form-control padding-none", cols = "20", rows = "4" })
                        @Html.ValidationMessageFor(x => x.Description)
                        @*<textarea class="notebook border-none form-control padding-none" cols="20" name="Description" placeholder="Write your description here..." rows="4"></textarea>*@
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.TakenDate, new { @class = "col-md-2 control-label" })
                    <div class="col-sm-10">
                        <div class="input-group date datepicker2">
                            @Html.TextBoxFor(x => x.TakenDate, "{0:dd MMMM yyyy}", new { @class = "form-control", id = "TakenDate", data_val = "true" })
                            @Html.ValidationMessageFor(x => x.TakenDate)
                            @*<input class="form-control" data-val="true" data-val-required="The Time field is required." id="TakenDate" name="TakenDate" type="text" value="" />*@
                            <span class="input-group-addon"><i class="fa fa-th"></i></span>
                        </div>
                    </div>
                </div>
                @Html.Hidden("PlaceID")
                @*<input type="hidden" name="PlaceID" />*@
                @Html.Hidden("Latitude")
                @*<input type="hidden" name="Latitude" />*@
                @Html.Hidden("Longitude")
                @*<input type="hidden" name="Longitude" />*@
                @Html.Hidden("JourneyID", @Model.JourneyID)
                @*<input type="hidden" name="JourneyID" />*@
                @Html.Hidden("Reference")
                @*<input type="hidden" name="Reference" />*@
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit">Add</button>
                    </div>
                </div>
            }

            @*</form>*@

        </div>
    </div>
</div>