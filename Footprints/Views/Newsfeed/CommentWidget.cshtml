@model Footprints.ViewModels.CommentWidgetViewModel
@using Footprints.ViewModels;
<div class="widget gridalicious-item not-responsive">

    <!-- Info -->
    <div class="bg-primary">
        <div class="media">
            <a href="" class="pull-left"><img src="@Model.ProfilePicURL" style="width:50px !important" class="media-object"></a>
            <div class="media-body innerTB half">
                <a href="#" class="pull-right innerT innerR text-white">
                    <i class="icon-reply-all-fill fa fa-2x "></i>
                </a>
                <a href="" class="text-white strong display-block">@Model.UserName</a>
                <span>Commented on a <a href="@Url.Action("Index", "Destination", new { destinationID = Model.DestinationID })">destination</a> on @Model.Timestamp</span>
            </div>

        </div>
    </div>

    <!-- Content -->
    <div class="innerAll">
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quaerat, pariatur!</p>
    </div>

    <!-- Comment -->
    <div class="bg-gray innerAll border-top border-bottom text-small ">
        <span>View all <a href="" class="text-primary">@Model.Comments.Count Comment</a></span>
    </div>

    <!-- First Comment -->
    <div class="media margin-none bg-gray">
        @{
            if (Model.Comments != null)
            {
                foreach (CommentViewModel comment in Model.Comments)
                {
                    <a href="" class="pull-left innerAll"><img src="@comment.UserAvatarURL" width="50" class="media-object"></a>
                    <div class="media-body innerTB">
                        <a href="#" class="pull-right innerT innerR text-muted"><i class="icon-reply-all-fill fa fa-2x "></i></a>
                        <a href="" class="strong text-inverse">@comment.UserCommentName</a><small class="text-muted display-block ">on @comment.Time</small>
                        <a href="" class="text-small">mark it</a>
                        <div>- @comment.Content</div>
                    </div>
                }
            }
        }
    </div>

    <div class="input-group comment">
        <input type="text" class="form-control" placeholder="Your comment here...">
        <div class="input-group-btn">
            <button type="button" class="btn btn-primary" href="#"><i class="fa fa-comment"></i></button>
        </div>
    </div>
</div>
