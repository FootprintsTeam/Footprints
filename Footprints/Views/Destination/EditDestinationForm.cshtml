@model Footprints.ViewModels.EditDestinationFormViewModel

<div class="modal fade" id="edit-destination-modal">

    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal heading -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">EDIT YOUR DESTINATION</h3>
            </div>
            <!-- // Modal heading END -->
            <!-- Modal body -->
            <div class="modal-body">
                <input id="pac-input" class="controls" type="text" placeholder="Enter a location">
                <div id="google-map-container" style="height: 200px; width: 100%">
                    <div id="map-canvas"></div>
                    <div id="sp-container" class="smallmap">
                        <div id="sp-close-button" class="close-button"><span>×</span></div>
                        <div id="sp-list"></div>
                    </div>
                </div>

                <div class="innerAll">
                    <div class="innerLR">
                        @using (Html.BeginForm("Edit", "Destination", FormMethod.Post, new { @class = "form-horizontal", role = "form", name = "frmDestination" }))
                        {
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Name</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Name, new { @placeholder = "Destination name", @class = "form-control" })
                                    @*<input type="text" placeholder="Destination name" name="Name" class="form-control">*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Description</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(x => x.Description, new { @placeholder = "Write your description here...", @class = "notebook border-none form-control padding-none", cols = "20", rows = "4" })
                                    @*<textarea class="notebook border-none form-control padding-none" cols="20" name="Description" placeholder="Write your description here..." rows="4"></textarea>*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Date</label>
                                <div class="col-sm-10">
                                    <div class="input-group date datepicker2">
                                        @Html.TextBoxFor(x => x.TakenDate, "{0:dd MMMM yyyy}", new { @class = "form-control", id = "TakenDate" })
                                        @*<input class="form-control" data-val="true" data-val-required="The Time field is required." id="TakenDate" name="TakenDate" type="text" value="" />*@
                                        <span class="input-group-addon"><i class="fa fa-th"></i></span>
                                    </div>
                                </div>
                            </div>
                            @Html.Hidden("PlaceID")
                            @*<input type="hidden" name="PlaceID" />*@
                            @Html.Hidden("Latitude")
                            @*<input type="hidden" name="Latitude" />*@
                            @Html.Hidden("Longitude")
                            @*<input type="hidden" name="Longitude" />*@
                            @Html.Hidden("JourneyID", @Model.JourneyID)
                            @*<input type="hidden" name="JourneyID" />*@
                            @Html.Hidden("Reference")
                            @*<input type="hidden" name="Reference" />*@
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </div>
                            </div>
                            @*</form>*@
                        }
                    </div>
                </div>
            </div>
            <!-- // Modal body END -->

        </div>
    </div>

</div>
<!-- // Modal END -->