@model Footprints.ViewModels.EditDestinationFormViewModel
<div class="modal fade" id="edit-destination-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Edit Your Destination</h3>
            </div>
            <div class="modal-body">
                <input id="pac-input" class="controls" type="text" placeholder="Enter a location">
                <div id="google-map-container" style="height: 200px; width: 100%">
                    <div id="map-canvas"></div>
                    <div id="sp-container" class="smallmap">
                        <div id="sp-close-button" class="close-button"><span>×</span></div>
                        <div id="sp-list"></div>
                    </div>
                </div>
                <div class="innerAll">
                    <div class="innerLR">
                        @using (Html.BeginForm("Edit", "Destination", FormMethod.Post, new { @class = "form-horizontal", role = "form", name = "frmDestination" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    @Html.ValidationMessageFor(x => x.PlaceID)
                                    @Html.ValidationMessageFor(x => x.PlaceName)
                                    @Html.ValidationMessageFor(x => x.Longitude)
                                    @Html.ValidationMessageFor(x => x.Latitude)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Name</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Name, new { @placeholder = "Destination name", @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Name)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Description</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(x => x.Description, new { @placeholder = "Write your description here...", @class = "notebook border-none form-control padding-none", cols = "20", rows = "4" })
                                    @Html.ValidationMessageFor(x => x.Description)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Date</label>
                                <div class="col-sm-10">
                                    <div class="input-group date datepicker2">
                                        @Html.TextBoxFor(x => x.TakenDate, "{0:dd MMMM yyyy}", new { @class = "form-control", id = "TakenDate" })
                                        <span class="input-group-addon"><i class="fa fa-th"></i></span>
                                        @Html.ValidationMessageFor(x => x.TakenDate)
                                    </div>
                                </div>
                            </div>
                            @Html.HiddenFor(x => x.JourneyID)
                            @Html.HiddenFor(x => x.DestinationID)
                            @Html.HiddenFor(x => x.PlaceID)
                            @Html.HiddenFor(x => x.PlaceName)
                            @Html.HiddenFor(x => x.Latitude)
                            @Html.HiddenFor(x => x.Longitude)
                            @Html.HiddenFor(x => x.Reference)
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
