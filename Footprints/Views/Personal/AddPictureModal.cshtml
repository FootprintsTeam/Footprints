@using Footprints.ViewModels;

<!--Popup of personal page-->
<div class="modal fade" id="modal-cover-picture-add">

    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal heading -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Add a picture</h3>
            </div>
            <!-- // Modal heading END -->
            <!-- Modal body -->
            <div class="modal-body">
                <div class="innerAll">
                    <div class="innerLR">
                        @{Html.RenderPartial("~/Views/Destination/UploadPhotoForm.cshtml", new PhotoUploadFormViewModel { ActionName = "AddAvatarPhoto", ControllerName = "Personal", DisplaySlide = true });}
                    </div>
                </div>
            </div>
            <!-- // Modal body END -->
        </div>
    </div>
</div>
<!-- // Modal END -->
