@model Footprints.ViewModels.PersonalAboutViewModel
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container" style="margin-top:60px">
    <div class="innerAll">
        <div class="row">
            <div class="col-lg-9 col-md-8">
                <!-- Widget -->
                <div class="widget">
                    <div class="widget-head bg-primary"><h4 class="heading text-white">Personal Information</h4></div>
                    <div class="widget-body">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
                                <form class="form-horizontal text-inverse" action="@Url.Action("Update","Personal")" method="post" role="form">
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true)
                                    @Html.Hidden("UserID", User.Identity.GetUserId())                                    
                                    
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.UserName)
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.UserName)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.AboutMe)
                                        @Html.TextBoxFor(model => model.AboutMe, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.AboutMe)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Address)
                                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Address)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Phone)
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Phone)
                                    </div>
                                    
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ProfilePictureUrl)
                                        @Html.TextBoxFor(model => model.ProfilePictureUrl, new { type = "file" })
                                        @Html.ValidationMessageFor(model => model.ProfilePictureUrl)
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save Personal Information" class="btn btn-default" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- // Widget END -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")    
}
